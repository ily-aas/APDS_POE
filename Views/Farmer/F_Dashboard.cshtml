@{
    ViewData["Title"] = "Farmer Dashboard";
    var username = User.Identity?.Name ?? "Farmer";
}

<div class="container mt-4">
    <!-- Welcome Message -->
    <div class="text-center mb-4">
        <h2>Welcome, @username!</h2>
        <p class="text-muted">Here is your dashboard overview</p>
    </div>

    <!-- Add Product Button -->
    <div class="text-end mb-4">
        @using (Html.BeginForm("AddProduct", "Farmer", FormMethod.Get))
        {
            <button class="btn btn-success">
                <i class="fas fa-plus-circle me-1"></i> Add Product
            </button>
        }
    </div>

    <!-- Product Cards -->
    <div class="row">
        @for (int i = 0; i < 3; i++) // Replace with your model
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Product Name @i</h5>
                        <p class="card-text">Category: Vegetables</p>
                        <p class="card-text">Created: @DateTime.Now.ToShortDateString()</p>
                        <a href="@Url.Action("ViewProduct", "Farmer", new { id = i })" class="btn btn-primary">
                            <i class="fas fa-eye me-1"></i> View Product
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


