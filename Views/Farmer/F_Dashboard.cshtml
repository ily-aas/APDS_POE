@using static APDS_POE.Models.System.EnumExtensions;
@using static APDS_POE.Models.System.Enums;
@model List<Product>

@{
    ViewData["Title"] = "Farmer Dashboard";
    var username = User.Identity?.Name ?? "Farmer";
}

<div class="container mt-4">
    <!-- Logout Button -->
    <div class="text-end mb-4">
        @using (Html.BeginForm("Logout", "Account", FormMethod.Post))
        {
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-sign-out-alt me-1"></i> 
            </button>
        }
    </div>

    <!-- Welcome Message -->
    <div class="text-center mb-4">
        <h2>Welcome, @username!</h2>
        <p class="text-muted">Here is your dashboard overview</p>
    </div>

    <!-- Add Product Button -->
    <div class="text-end mb-4">
        @using (Html.BeginForm("Product", "Farmer", FormMethod.Get))
        {
            <button class="btn btn-success">
                <i class="fas fa-plus-circle me-1"></i> Add Product
            </button>
        }
    </div>

    <!-- Product Cards -->
    <div class="row">
        @foreach(var product in Model) 
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <!-- Product Name -->
                        <h5 class="card-title">Product Name: @product.Name</h5>
                        <div class="icon mb-3">
                            <i class="fas fa-box-open"></i>
                        </div>

                        <!-- Product Category -->
                        <p class="card-text">Category: @product.Category</p>

                        <!-- Product Created Date -->
                        <p class="card-text">Created: @DateTime.Now.ToShortDateString()</p>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
